---
import type { GetStaticPathsOptions, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

import H1 from "../../components/H1.astro";
import Main from "../../components/Main.astro";
import Pagination from "../../components/Pagination.astro";
import PostList from "../../components/PostList.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getCollection("posts");
  return paginate(allPosts, { pageSize: 6 });
}

interface Props {
  page: Page;
}

const { page } = Astro.props;
const posts = page.data as CollectionEntry<"posts">[];
---

<Layout title="Blog - Astro Course">
  <Main>
    <H1 text="Rythm Nation Blog" />
    <p class="mb-24 text-2xl text-zinc-900 max-sm:mb-14">
      Join the comumunity and learn from Music Producers and Enthusiasts
    </p>

    <div class="mb-12">
      <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
    </div>

    <PostList posts={posts} />

    <div class="mb-36">
      <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
    </div>
  </Main>
</Layout>
