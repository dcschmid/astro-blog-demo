---
import { getCollection } from "astro:content";

import H1 from "../components/H1.astro";
import Main from "../components/Main.astro";
import PostList from "../components/PostList.astro";
import Layout from "../layouts/Layout.astro";

const posts = (await getCollection("posts")).slice(0, 6);
---

<Layout title="Blog - Astro Course">
  <Main>
    <H1 text="Rythm Nation Blog" />
    <p class="mb-24 text-2xl text-zinc-900 max-sm:mb-14">
      Join the comumunity and learn from Music Producers and Enthusiasts
    </p>

    <PostList posts={posts} />
  </Main>
</Layout>
